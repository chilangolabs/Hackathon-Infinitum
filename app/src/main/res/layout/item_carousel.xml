<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_margin="30dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgItemCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/bache_birthday" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:background="@color/bg_transparent_gray"
                android:padding="@dimen/activity_horizontal_margin">

                <com.chilangolabs.reporteciudadano.customelements.MontserratTextView
                    android:id="@+id/txtItemCarouselTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reporte de Bache"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    app:font="SemiBold" />

                <com.chilangolabs.reporteciudadano.customelements.MontserratTextView
                    android:id="@+id/txtItemCarouselDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="Chihuahua 230 - Estado: Revisado"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    app:font="Light" />

                <com.chilangolabs.reporteciudadano.customelements.MontserratTextView
                    android:id="@+id/txtItemCarouselTicket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text="#342039"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    app:font="Light" />

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>